<!-- START: Page Background -->
<div class="nk-page-background op-5" data-bg-mp4="<%= asset_path('bg-2.mp4') %>" data-bg-webm="<%= asset_path('bg-2.webm') %>" data-bg-ogv="<%= asset_path('bg-2.ogv') %>" data-bg-poster="<%= asset_path('bg-2.jpg') %>"></div>
<!-- END: Page Background -->

<div class="nk-main">
  <% if flash[:wh_error] %>
      <%= render 'viewparts/whresult' %>
  <% end %>
  <div class="nk-header-title nk-header-title-sm nk-header-title-parallax-opacity">




    <div class="nk-header-text-bottom">
      <div class="nk-breadcrumbs text-xs-center">
        <ul>
          <li><a href="/">ГЛАВНАЯ</a></li>
          <li>
            <span>ЗАЯВКА НА ВНЕСЕНИЕ В WHITELIST</span>
          </li>
        </ul>
      </div>
    </div>


  </div>




  <div class="container">
    <div class="nk-gap-4"></div>

   <%=form_for :wh, url: whadd_path do |f|%>
        <%= f.number_field 'player_id', placeholder:'STEAM ID (например: 7656119807XXXXXXX)' ,:required => true, class:'form-control home-game-info'%>
        <div class="nk-gap-2"></div>
        <%= f.text_field 'player_nick', placeholder:'Игровой ник. Ник после входа на сервер менять нельзя!' ,:required => true, class:'form-control home-game-info'%>
        <div class="nk-gap-2"></div>
        <%= f.text_field 'player_email', placeholder:'Ваша почта. Результат заявки придет на почту, а если выбрана опция регистрация, то и пароль.'  ,:required => true, class:'form-control home-game-info'%>
        <div class="nk-gap-2"></div>
        <div class="checkbox">
          <label>
            <input type="checkbox" name="reg"> Зарегистрировать на сайте?
          </label>
        </div>

        <div class="nk-gap-2"></div>
        <button  type="submit" class="nk-btn nk-btn-color-white link-effect-4 pull-right">Отправить заявку</button>
  <%end%>

    <div class="nk-gap-4"></div>
    <div class="nk-gap-3"></div>

  </div>
</div>
