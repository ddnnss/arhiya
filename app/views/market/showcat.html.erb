<!-- START: Page Background -->
<div class="nk-page-background op-5" data-bg-mp4="<%= asset_path('bg-2.mp4') %>" data-bg-webm="<%= asset_path('bg-2.webm') %>" data-bg-ogv="<%= asset_path('bg-2.ogv') %>" data-bg-poster="<%= asset_path('bg-2.jpg') %>"></div>
<!-- END: Page Background -->

<div class="nk-main">

  <div class="nk-header-title nk-header-title-sm nk-header-title-parallax-opacity">

    <div class="nk-header-text-bottom">
      <div class="nk-breadcrumbs text-xs-center">
        <ul>
          <li><a href="/">ГЛАВНАЯ</a></li>
          <li>
            <span>SCUM<span style="color: #e08821;">B</span>LACK<span style="color: #e08821;">M</span>ARKET</span>
          </li>
        </ul>
      </div>
    </div>

  </div>




  <div class="container">
    <div class="nk-gap-4"></div>

    <div class="nk-store">

      <!-- START: Products List -->
      <div class="row equal-height multi-columns-row no-gap">
        <%@items.each do |item|%>
            <div class="col-sm-6 col-lg-4">

              <!-- START: Product -->
              <div class="nk-product" data-mouse-parallax-z="2">
                <div>
                  <div class="nk-carousel-3" data-size="1" data-mouse-parallax-z="3">
                    <div class="nk-carousel-inner nk-popup-gallery">

                      <div>
                        <div>
                          <img class="nk-img-stretch" src="/images/items/<%=item.item_image%>" alt="SCUM - <%=item.item_name%>">
                        </div>
                      </div>
                      <div>
                        <div>
                          <img class="nk-img-stretch" src="/images/items/<%=item.item_image%>" alt="SCUM - <%=item.item_name%>">
                        </div>
                      </div>


                    </div>
                  </div>
                  <h2 class="nk-product-title h5" data-mouse-parallax-z="1"><%=item.item_name%></h2>
                  <%if logged_in?%>
<div id="to_cart_button_<%=item.id%>">
  <%if session[:cart].keys.include? item.id.to_s%>
      <a style="margin-top: 20px;" href="/tocart/<%=item.id%>" id="cart_button_<%=item.id%>" onclick="return theFunction(<%=item.id%>);" data-remote="true" class="nk-btn nk-btn-xs nk-btn-rounded nk-btn-outline nk-btn-color-success"><span id="cart_state_txt_<%=item.id%>">ДОБАВИТЬ ЕЩЕ</span></a>

<%else%>
      <a style="margin-top: 20px;" href="/tocart/<%=item.id%>" id="cart_button_<%=item.id%>" onclick="return theFunction(<%=item.id%>);" data-remote="true" class="nk-btn nk-btn-xs nk-btn-rounded nk-btn-outline nk-btn-color-main-1"><span id="cart_state_txt_<%=item.id%>">В КОРЗИНУ</span></a>

<%end%>

</div>
<%end%>
                  <div style="margin-top: 20px;" id="spinner_<%=item.id%>" ></div>
                  <div class="nk-product-bottom">
                    <div>
                      <div class="nk-product-price">

                        <div class="nk-gap-1"></div>
                        Цена : <%=item.item_price%> RC
                        <div class="nk-gap-1"></div>

                      </div>

                    </div>
                  </div>
                </div>
              </div>
              <!-- END: Product -->

            </div>
        <%end%>


      </div>
      <!-- END: Products List -->

      <div class="nk-gap-5"></div>

      <!-- START: Pagination -->

      <!-- END: Pagination -->
    </div>

    <div class="nk-gap-4"></div>
    <div class="nk-gap-3"></div>
  </div>
</div>

<script language="JavaScript">

    function theFunction (id) {
        $("#to_cart_button_"+id).css('display','none');
        $("#spinner_"+id).addClass('spinner');
        return true;
    }
</script>