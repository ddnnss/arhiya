  <div class="container bg-dark-1">

      <div class="nk-store nk-store-cart">
        <div class="table-responsive">
          <table class="table nk-store-cart-products">
            <tbody>
            <%@tarkovitems.each do |item|%>
            <tr style="opacity: 1; transform: matrix(1, 0, 0, 1, 0, 0);">
              <td class="nk-product-cart-thumb" style="width: 100px;">
                <a href="store-product.html" class="nk-post-image">
                  <%if item.player.player_admin%>

                  <img style=" box-shadow: 0 0 20px #e08821;
                      border: 1px solid;
                      padding: 15px;
                      border-radius: 50%;" src="/images/tarkovitems/<%= item.item_type%>.png" class="nk-img">
                  <%else%>
                  <img style="    border: 1px solid;
                      padding: 15px;
                      border-radius: 50%;" src="/images/tarkovitems/<%= item.item_type%>.png" class="nk-img">
                  <%end%>

                </a>
              </td>
              <td class="nk-product-cart-title">
                <h2 class="nk-post-title h5">
                  <a href="store-product.html"><%= item.item_name%></a> в наличии <%= item.item_to_sell_count%> шт.
                </h2>
                <div class="nk-social-friends-meta">
                  Продавец : <a href="/profile/<%= item.player.player_nickname_translit%>"><%= item.player.player_nickname%></a>
                  | Покупок: <%= item.player.player_buys_count == 0 ? 'Нет' : item.player.player_buys_count%>
                  | Продаж : <%= item.player.player_sells_count == 0 ? 'Нет' : item.player.player_sells_count%>
                  <% if item.player.player_votes_count == 0%>
                      Рейтинг : НЕТ
                  <%else%>

                      <div class="nk-review-rating" data-rating="3.5">
                        Рейтинг :
                        <% (item.player.player_votes_summ / item.player.player_votes_count).times do %>
                            <span class="fa fa-star"></span>
                        <% end %>

                      </div>
                  <% end %>
                </div>
              </td>
              <td class="nk-product-cart-price">&#8381; : <%= item.item_price_virt_rub%> <br>&#36; : <%= item.item_price_virt_usd%></td>

              <td class="nk-product-cart-total">
                <a href="#" class="nk-btn nk-btn-xs ">Купить</a>
              </td>

            </tr>
            <% end %>


            </tbody>
          </table>
        </div>



      </div>

