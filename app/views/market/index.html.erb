<!-- START: Page Background -->
<div class="nk-page-background op-5" data-bg-mp4="<%= asset_path('bg-2.mp4') %>" data-bg-webm="<%= asset_path('bg-2.webm') %>" data-bg-ogv="<%= asset_path('bg-2.ogv') %>" data-bg-poster="<%= asset_path('bg-2.jpg') %>"></div>
<!-- END: Page Background -->

<div class="nk-main">

  <div class="nk-header-title nk-header-title-sm nk-header-title-parallax-opacity">

    <div class="nk-header-text-bottom">
      <div class="nk-breadcrumbs text-xs-center">
        <ul>
          <li><a href="/">ГЛАВНАЯ</a></li>
          <li>
            <span>SCUM<span style="color: #e08821;">B</span>LACK<span style="color: #e08821;">M</span>ARKET</span>
          </li>
        </ul>
      </div>
    </div>

  </div>




  <div class="container">
    <div class="nk-gap-2"></div>
    <div class="container">
      <div class="text-center">

        <h4 class="nk-sub-title">Вся информация вымышленная и является предметами игры SCUM, любое сходство случайно, реальной ценности не представляет!</h4>
      </div>
    </div>
    <div class="nk-gap-2"></div>

    <%if flash[:err]%>
        <div class="nk-gap-1"></div>
        <div class="nk-info-box bg-danger">
          <div class="nk-info-box-icon">
            <i class="ion-alert-circled"></i>
          </div>
          <%=flash[:err]%>
        </div>
    <%end%>
    <%if flash[:ok]%>
        <div class="nk-gap-1"></div>
        <div class="nk-info-box bg-success">
          <div class="nk-info-box-icon">
            <i class="ion-alert-circled"></i>
          </div>
          <%=flash[:ok]%>
        </div>
    <%end%>
    <div class="nk-store">

      <!-- START: Products List -->
      <div class="row equal-height multi-columns-row no-gap">
<%@scummaincat.each do |maincat|%>
        <div class="col-sm-6 col-lg-4">

          <!-- START: Product -->
          <div class="nk-product" data-mouse-parallax-z="2">
            <div>
              <div class="nk-carousel-3" data-size="1" data-mouse-parallax-z="3">
                <div class="nk-carousel-inner nk-popup-gallery">

                  <div>
                    <div>
                      <a href="/cat/<%=maincat.cat_name_translit%>">
                      <img class="nk-img-stretch" src="/images/maincat/<%=maincat.cat_image%>" alt="SCUM - <%=maincat.cat_image%>">
                      </a>
                    </div>
                  </div>
                  <div>
                    <div>
                      <a href="/cat/<%=maincat.cat_name_translit%>">
                      <img class="nk-img-stretch" src="/images/maincat/<%=maincat.cat_image%>" alt="SCUM - <%=maincat.cat_image%>">
                      </a>
                    </div>
                  </div>


                </div>
              </div>
              <h2 class="nk-product-title h5 menu_item" data-mouse-parallax-z="1"><a href="/cat/<%=maincat.cat_name_translit%>"><%=maincat.cat_name%></a></h2>


              <div class="nk-product-bottom">
                <div>
                  <div class="nk-product-price menu_item">
                    <div class="nk-gap-1"></div>
                    <%=maincat.cat_info%>
                    <div class="nk-gap-1"></div>
                    Предложений : <%=maincat.scumitems.count%></div>

                </div>
              </div>
            </div>
          </div>
          <!-- END: Product -->

        </div>
<%end%>


      </div>
      <!-- END: Products List -->

      <div class="nk-gap-5"></div>

      <!-- START: Pagination -->

      <!-- END: Pagination -->
    </div>

    <div class="nk-gap-4"></div>
    <div class="nk-gap-3"></div>
  </div>
</div>