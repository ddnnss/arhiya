<div class="modal nk-modal fade tamriel_adv_event" id tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" style="top: 30%;">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title nk-title" id="mySmallModalLabel">Создание Приключения Тамриеля</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span class="ion-android-close"></span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_for  :tamriel_adv_event, url: tamriel_adv_event_path , :html => { :id => 'tamriel_adv_event_form'}, remote: true  do |f|%>
            <%=f.text_field :event_name, :placeholder =>'Название события', :required => true ,class:'form-control'%>
            <div class="nk-gap-1"></div>
            <select name="month" class="form-control">
              <option disabled="" selected="">Дата события</option>
              <%@current_week.each do |w|%>
                <%unless Date.today > w%>
                  <option value="<%=w.strftime('%d/%m/%Y')%>"><%=w.strftime('%d/%m/%Y')%></option>
                  <%end%>
              <%end%>


            <input  name="player_id" value="" type="hidden" />

            <%= submit_tag 'Отправить', class:'nk-btn  nk-btn-color-main-1'%>
        <% end %>
        <div id="pmsend" style="display: none; ">
          <div class="nk-info-box bg-success" >
            <div class="nk-info-box-icon">
              <i class="ion-information-circled"></i>
            </div>
            Сообщение отправлено. Спасибо.
          </div>
          <button type="button" class="nk-btn" data-dismiss="modal">Закрыть</button>
        </div>
      </div>
    </div>
  </div>
</div>
