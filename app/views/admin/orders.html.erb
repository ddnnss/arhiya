
<div class="nk-main">

  <div class="nk-header-title nk-header-title-sm nk-header-title-parallax-opacity">

    <div class="nk-header-text-bottom">
      <div class="nk-breadcrumbs text-xs-center">
        <ul>
          <li><a href="/admin">АДМИНКА</a></li>
          <li>
            <span>ЗАКАЗЫ</span>
          </li>
        </ul>
      </div>
    </div>

  </div>




  <div class="">


    <div class="nk-box bg-dark-1 text-white">
      <div class="nk-gap-1"></div>
      <div class="container">

        <div class="nk-gap-1"></div>

        <div class="">
          <div class="">


            <div class="nk-gap-1"></div>
            <table class="table table-bordered">
              <tr>

                <td >№</td>
                <td>ДАТА</td>
                <td>ЗАКАЗЧИК</td>
                <td>СУММА</td>
                <td >ВЫДАН</td>
                <td></td>

              </tr>

              <%@orders.each do |o|%>
                  <tr>

                    <td><a class="nk-btn nk-btn-sm nk-btn-color-warning" href="/admin/order?id=<%=o.id%>"><%=o.id%></a> </td>
                    <td><%=o.created_at.strftime("%d.%m.%Y | %H:%M:%S")%></td>
                    <td><%=o.player.player_nickname + ' | ' + o.player.player_discord_link%></td>
                    <td><%=o.order_total_price%></td>
                    <td style="background-color: <%=o.order_complete ? '#00FF00' : '#ff0000'%>"><%=o.order_complete ? 'ДА' : 'НЕТ'%></td>
                    <%unless session[:moder]%>
                    <td>    <a href="/admin/orderdelete?id=<%=o.id%>" onclick="return confirm('ТОЧНО УДАЛИТЬ?')" class="nk-btn nk-btn-sm nk-btn-color-danger">Удалить</a>

                    </td>
                    <%end%>

                  </tr>
              <%end%>



            </table>




          </div>
        </div>

        <div class="nk-gap-4"></div>
      </div>



    </div>
  </div>
  <div class="nk-gap-4"></div>
</div>


