<script type="application/javascript">
    $("#player_info").summernote('code',"<%= j @player.player_info.html_safe  %>");

    const checkbox = $("#item_barter_checkbox");

    checkbox.change(function(event) {
        var checkbox = event.target;
        if (checkbox.checked) {
            $('#item_barter').removeAttr('disabled');
        } else {
            $("#item_barter").attr("disabled","disabled")
        }
    });
</script>