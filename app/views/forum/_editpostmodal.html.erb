

<div id="edit-post-modal" class="modal nk-modal fade " tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true" style="display: none; top : 5%;">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span class="ion-android-close"></span>
        </button>
        <h4 class="modal-title nk-title" id="myLargeModalLabel">Редактирование сообщения</h4>
      </div>
      <div class="modal-body">
        <%= form_for :editpost1, url: editpost1_path  do %>
            <div class="nk-gap-2"></div>



            <textarea class="nk-summernote"  id="post_content" name="post_content"  rows="18"></textarea>

            <input id="post_id" name="post_id" value="" type="hidden" />
            <input  id="topic_id" name="topic_id" value="" type="hidden" />
             <input id="topic_name" name="topic_name" value="" type="hidden" />
            <div class="nk-gap-2"></div>



            <button  type="submit" class="nk-btn nk-btn-color-main-1 link-effect-4">Внести изменения</button>

        <% end %>
      </div>
    </div>
  </div>
</div>